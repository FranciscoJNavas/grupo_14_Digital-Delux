    <%- include('./partials/head') %>
    <link rel="stylesheet" href="css/stylesIndex.css">
</head>
<body>
    <%- include('./partials/header') %>
    <main>
        
        <!-- Sección para el banner -->
        <div class="top-banner">
            <img src="/images/banner-prueba.jpg" alt="Imagen banner">
            <div class="banner-slider">
                <i class="fa-solid fa-angle-left"></i>
                <i class="fa-solid fa-angle-right"></i>
            </div>
        </div>
        <!-- Slider para indicar el orden de imagen que tiene el banner -->
        <div class="banner-image-select">
            <i id="first" class="fa-solid fa-circle"></i>
            <i id="second" class="fa-solid fa-circle"></i>
            <i id="third" class="fa-solid fa-circle"></i>
            <i id="fourth" class="fa-solid fa-circle"></i>
            <i id="fifth" class="fa-solid fa-circle"></i>
        </div>
    
        <div class="main-products">
            <!-- Filtro de producto (convenientemente debería verse solo en tablet o desktop) -->
            <section class="filter">
                <h4>Aplicar filtros</h4>
                
                <div class="category">
                    <h5>Producto</h5>
                    <label><input type="checkbox" name="product" value="product1">Producto1</label>
                    <label><input type="checkbox" name="product" value="product2">Producto2</label>
                    <label><input type="checkbox" name="product" value="product3">Producto3</label>
                    <label><input type="checkbox" name="product" value="product4">Producto4</label>
                </div>
    
                <div class="category">
                    <h5>Marca</h5>
                    <label><input type="checkbox" name="brand" value="brand1">Marca1</label>
                    <label><input type="checkbox" name="brand" value="brand2">Marca2</label>
                    <label><input type="checkbox" name="brand" value="brand3">Marca3</label>
                    <label><input type="checkbox" name="brand" value="brand4">Marca4</label>
                </div>
    
                <div class="category">
                    <h5>Modelo</h5>
                    <label><input type="checkbox" name="model" value="model1">Modelo1</label>
                    <label><input type="checkbox" name="model" value="model2">Modelo2</label>
                    <label><input type="checkbox" name="model" value="model3">Modelo3</label>
                    <label><input type="checkbox" name="model" value="model4">Modelo4</label>
                </div>
    
            </section>
            <section class="home-products">
                <section class="category">
                    <h3 class="featured-category">Lo más destacado...</h3>
                    <% for( let index = 0; index < 2; index++ ) { %>
                        <%- include('./partials/product') %>
                    <% } %>
                </section>
    
                <section class="category">
                    <h3 class="featured-category">Visto recientemente...</h3>
                    <% for( let index = 0; index < 2; index++ ) { %>
                        <%- include('./partials/product') %>
                    <% } %>
                </section>
    
                <section class="category">
                    <h3 class="featured-category">Novedades...</h3>
                    <% for( let index = 0; index < 4; index++ ) { %>
                        <%- include('./partials/product') %>
                    <% } %>
                </section>
            </section>
        </div>
    
    </main>
    
    <%- include('./partials/footer') %>
</body>
</html>



