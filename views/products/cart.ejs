                    <h3>Envío</h3>
                    <a href="#" class="change-address">Cambiar dirección de envío</a>
                </div>
                    <p class="price">$99.999</p>
            </div>

            <div class="total">
                <h3 class="total">Total</h3>
                <p class="price">$99.999</p>
            </div>

            <div class="buy-now">
                <button type="submit" class="form-button">Comprar</button>
            </div>
        </section>
