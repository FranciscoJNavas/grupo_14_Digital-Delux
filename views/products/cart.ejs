<body>
    <%- include('../partials/header') %>
    <main>
        <section class="cart-page">
            <div class="product-cart">
                <div class="image-name">
                    <img src="/images/img-tv-samsung-smart.jpg" alt="imagen-principal" class="product-image-in-cart">
                    <h3 class="product-name">Nombre Producto</h3>
                </div>
                <div class="buy-detail">
                    <div class="quantity cart-q">
